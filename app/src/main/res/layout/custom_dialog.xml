<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="vertical">
    
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nomComplet"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Complet"
                android:textSize="18sp"
                android:textStyle="bold" />

            
            <TextView
                android:textAlignment="center"
                android:id="@+id/mail"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idhammouanas1998@gmail.com"
                android:textSize="14sp" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/phone"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone : +212 638 88-65-56"
                android:textSize="14sp" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/adresse"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse : Nr 751 Hassania 1 Alia"
                android:textSize="14sp" />


            <TextView
                android:textAlignment="center"
                android:id="@+id/ville"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville : Mohammédia"
                android:textSize="14sp" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/categorie"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie préféré : Sport et Loisir"
                android:textSize="14sp" />


            <LinearLayout
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:textAlignment="center"
                    android:id="@+id/onDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete" />
                
            </LinearLayout>
       

          
        </LinearLayout>
    


</androidx.cardview.widget.CardView>